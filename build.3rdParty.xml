<project name="3rdPartyLibraries">

    <dirname property="lib.parent.dir" file="${ant.file.3rdPartyLibraries}" />
    <property name="lib" value="${lib.parent.dir}/lib"/>

    <property environment="ENV"/>

    <fileset id="log4j.lib" dir="${lib}/apache-log4j-1.2.17">
        <include name="log4j-1.2.17.jar"/>
    </fileset>

    <fileset id="commons-logging.lib" dir="${lib}/commons-logging-1.1.3">
        <include name="commons-logging-1.1.3.jar"/>
        <include name="commons-logging-adapters-1.1.3.jar"/>
        <include name="commons-logging-api-1.1.3.jar"/>
    </fileset>

    <fileset id="junit.lib" dir="${lib}/org.junit_4.11.0">
        <include name="junit-4.11.jar"/>
    </fileset>

    <fileset id="hibernate.lib" dir="${lib}/hibernate-release-4.2.6.Final/lib/required">
        <include name="antlr-2.7.7.jar"/>
        <include name="dom4j-1.6.1.jar"/>
        <include name="hibernate-commons-annotations-4.0.2.Final.jar"/>
        <include name="hibernate-core-4.2.6.Final.jar"/>
        <include name="hibernate-jpa-2.0-api-1.0.1.Final.jar"/>
        <include name="javassist-3.15.0-GA.jar"/>
        <include name="jboss-logging-3.1.0.GA.jar"/>
        <include name="jboss-transaction-api_1.1_spec-1.0.1.Final.jar"/>
    </fileset>

    <fileset id="hamcrest.lib" dir="${lib}/org.hamcrest_1.3.0">
        <include name="hamcrest-core-1.3.jar"/>
    </fileset>

    <fileset id="tomcat-ee-plus.lib" dir="${ENV.CATALINA_HOME}/lib">
        <include name="javaee-api-6.0-5-tomcat.jar"/>
    </fileset>

    <fileset id="postgresql.lib" dir="${lib}/postgresql-9.2-1003">
        <include name="postgresql-9.2-1003.jdbc4.jar"/>
    </fileset>

    <!-- 3rd Party jars that are only used for testing -->
    <path id="3rdParty.unit.test.support">
        <fileset refid="junit.lib"/>
        <fileset refid="hamcrest.lib"/>
        <fileset refid="tomcat-ee-plus.lib"/>
    </path>

</project>

