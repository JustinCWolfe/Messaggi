<project name="ModuleBuild" >

    <!-- Define the OpenTradingFramework root directory as the location of this build file -->
    <dirname property="root" file="${ant.file.ModuleBuild}" />

    <import file="build.3rdParty.xml"/>

    <path id="all.modules">
        <path refid="production.modules"/>
        <path refid="test.modules"/>
    </path>

    <path id="production.modules">
        <path id="admin.module" path="${root}/admin/build/classes"/>
        <path id="base.module" path="${root}/base/build/classes"/>
        <path id="dao.module" path="${root}/dao/build/classes"/>
        <path id="domain.module" path="${root}/domain/build/classes"/>
        <path id="messaging.module" path="${root}/messaging/build/classes"/>
        <path id="web.module" path="${root}/web/build/classes"/>
    </path>

    <path id="test.modules">
        <path id="admin.test.module" path="${root}/admin/build/test-classes"/>
        <path id="base.test.module" path="${root}/base/build/test-classes"/>
        <path id="dao.test.module" path="${root}/dao/build/test-classes"/>
        <path id="domain.test.module" path="${root}/domain/build/test-classes"/>
        <path id="messaging.test.module" path="${root}/messaging/build/test-classes"/>
        <path id="web.test.module" path="${root}/web/build/test-classes"/>
    </path>

</project>
